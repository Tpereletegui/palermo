<nav id="navbar">
  <input type="checkbox" id="check">
  <label for="check" class="checkbtn">
    <i id="icon" class="fas fa-bars"></i>
  </label>
  <a href="/" class="logo">
    <img id="logo-img" src="/images/logos/logo-navbar.png" alt="" width="120px">
  </a>


  <div class="fade-navbar"></div>
  
  <ul>

    <li class="logo-nav-contain"><img class="logo-nav-responsive" src="/images/logos/logo-navbar-landscape.png" alt="" width="120px"></li>
    <li><i class="navbar-icon fas fa-user-tie"></i><a id="aboutus-link" class="overeable">About Us</a></li>
    <li><i class="navbar-icon far fa-building"></i><a id="programs-link" class="overeable">Loan Programs</a></li>
    <li><i class="navbar-icon fas fa-dollar-sign"></i><a id="deals-link" class="overeable">Recent Deals</a></li>
    <li><i class="navbar-icon far fa-comment-dots"></i><a id="testimonials-link" class="overeable">Testimonials</a></li>
    <li><i class="navbar-icon far fa-handshake"></i><a href="/brokers" id="brokers-link" class="overeable">Brokers</a></li>
    <li><i class="navbar-icon far fa-question-circle"></i><a id="faq-link" class="overeable">FAQ</a></li>
    <li><i class="navbar-icon far fa-paper-plane"></i><a id="contact-link"class="overeable">Contact</a></li>
    <li><a class="lang-img"><img class="lang-img" src="/images/icons/flag-spain.png" alt=""></a></li>

  </ul>

  <script>
    let btn = document.querySelector('.checkbtn');
    let icon = document.querySelector('#icon');
    let overlayNav = document.querySelector('.fade-navbar');
    let navbar = document.querySelector('#navbar');
    let lang = document.querySelector('.lang-img');
    let logo = document.querySelector('.logo');

    btn.addEventListener("click", () =>{
      if (icon.classList.contains('fa-bars')){
        overlayNav.style.display = "block";
        icon.classList.remove('fa-bars');
        icon.classList.add('fa-times');
      }else{
        overlayNav.style.display = "none";
        icon.classList.remove('fa-times');
        icon.classList.add('fa-bars');
      }
    })

    lang.addEventListener("click", () =>{
      if (lang.innerHTML == '<img src="/images/icons/flag-spain.png" alt="">'){
        lang.innerHTML = '<img src="/images/icons/flag-american.png" alt="">'
      }else{
        lang.innerHTML = '<img src="/images/icons/flag-spain.png" alt="">'
      }
    })

    window.addEventListener('scroll', function () {
      if (window.pageYOffset > 100) {
        navbar.classList.add('scroll-fade');
        logo.innerHTML = '<img id="logo-img" src="/images/logos/logo-navbar-landscape.png" alt="" width="160px" style="margin-top:15px;">'
      }else{
        navbar.classList.remove('scroll-fade');
        logo.innerHTML = '<img id="logo-img" src="/images/logos/logo-navbar.png" alt="" width="120px" >'

      }
    });

  </script>

  
</nav>