<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head') -%>
<body>

    <%- include('./partials/navbar') -%>
    <%- include('./partials/float-button') -%>

    <div class="container-faq-view margin-nav-section" id="faq-section">
        
        <div class="faqview-title-container section-title-container">
            <div class="section-title">

                <label class="section-title-label" style="color:white;">
                Frequently Asked Questions
                </label>
            </div>
        
        </div>
    

        <div class="questions-container">
            <% for (let i = 0; i < questions.length; i++) {%>
                <div class=" question-container-all <%= i<questions.length/2 ? 'question-container-first':'question-container-second' %>">
                    <label class="question-title"> <%=questions[i].title %></label>
                    <p class="question-text"> <%=questions[i].text %></p>
                    <p class="question-text-alt"> <%=questions[i].textAlt ? questions[i].textAlt : "" %></p>
                    <% if (questions[i].bullets){ %>
                        <% for (let j = 1; j < questions[i].bullets.length; j++ ){  %>
                            <p class="question-text-bullet"> <%= questions[i].bullets[j] %></p>
                        <% } %>
                    <% } %>
                </div>
            <% } %>
        </div>

        <div class="section-title">
            <label class="section-title-label" style="color:black;">
                More Questions? 
            </label>
        </div>
        <%- include('./sections/contact') -%>



        
    </div>


    <%- include('./partials/footer') -%>
    <script src="/js/navbarLinks.js"></script>
    <script src="/js/navbarResponsive.js"></script>
    <!-- Para las animaciones 'on scroll' -->
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script> AOS.init(); </script> 
</body>
</html>